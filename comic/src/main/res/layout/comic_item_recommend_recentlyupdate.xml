<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:layout_marginLeft="@dimen/dp_11"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_22">

    <RelativeLayout
        android:id="@+id/container_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        android:background="@drawable/bg_shadow">

        <ImageView
            android:id="@+id/iv_recently_icon"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_120"
            android:background="@color/comic_ffffff"
            android:layout_centerInParent="true"
            tools:background="@drawable/icon" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_recently_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toRightOf="@id/container_img"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        tools:text="标题" />


    <TextView
        android:id="@+id/tv_recently_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recently_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toRightOf="@id/container_img"
        android:maxLines="2"
        android:text="这是一部神奇的小说..."
        android:textColor="@color/comic_6e7379"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_recently_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/container_img"
        android:text="佚名"
        android:textColor="@color/comic_6e7379"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_update_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="连载中"
        android:textColor="@color/comic_fe4c68"
        android:textSize="@dimen/dp_12" />
</RelativeLayout>