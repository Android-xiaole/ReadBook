<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title = "@string/comic_my_reward_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_comic_reward"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/reward_header_img"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icon_user_avatar_default" />

                    <TextView
                        android:id="@+id/reward_header_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/comic_reward_tv_bg"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/app_name"
                        android:textColor="@color/base_333333"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reward_manhua_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/comic_reward_comic_text"
                        android:textColor="@color/base_333333"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/reward_manhua_coins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/comic_money_value_text"
                        android:textColor="@color/base_333333"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/reward_already_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/comic_had_reard_text"
                android:textColor="@color/base_333333"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />

            <com.jj.comics.widget.NestedRecyclerView
                android:id="@+id/reward_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.jj.comics.widget.NestedRecyclerView>


            <LinearLayout
                android:id="@+id/reward_nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_comic_reward_nodata2_bg" />

                <TextView
                    android:id="@+id/reward_go_reward"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/comic_36"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/comic_shape_reward_red_textbg"
                    android:gravity="center"
                    android:text="@string/comic_go_reward"
                    android:textColor="@color/base_color_ffffff"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5">

                <ImageView
                    android:id="@+id/reward_img"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/icon_comic_reward_like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@id/reward_img"
                    android:text="@string/comic_guess_like"
                    android:textColor="@color/comic_3f4040"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/reward_refresh"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/icon_comic_refresh" />
            </RelativeLayout>

            <com.jj.comics.widget.NestedRecyclerView
                android:id="@+id/reward_like_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.jj.comics.widget.NestedRecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>