<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/bind_phone_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_bind_phone_text"/>


    <RelativeLayout
        android:id="@+id/rl_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bind_phone_bar"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/comic_login_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/comic_login_tab"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/comic_bg_et"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_phone" />

            <EditText
                android:id="@+id/comic_login_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:maxLength="11"
                android:background="@null"
                android:gravity="bottom"
                android:hint="@string/comic_input_phone_number"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/comic_333333"
                android:textColorHint="@color/comic_999999"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/comic_login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/comic_login_username"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/comic_bg_et"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comic_login_password_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_verification_code" />

                <EditText
                    android:id="@+id/comic_login_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/comic_input_code"
                    android:inputType="number"
                    android:lines="1"
                    android:textColor="@color/comic_333333"
                    android:textColorHint="@color/comic_999999"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/comic_login_code"
                    android:layout_width="@dimen/dp_86"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/comic_login_code"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/comic_get_code"
                    android:textAppearance="@style/comic_code" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/comic_btn_bind"
            android:layout_width="@dimen/dp_221"
            android:layout_height="wrap_content"
            android:layout_below="@id/comic_login_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_49"
            android:background="@drawable/btn_buttonbg_yellow"
            android:gravity="center"
            android:text="@string/comic_bind_phone_text"
            android:textColor="@color/comic_ffffff"
            android:textSize="@dimen/dp_18" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_binded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bind_phone_bar"
        android:visibility="gone">

        <TextView
            android:id="@+id/__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center"
            android:text="@string/comic_had_bind_phone_text"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_binded_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/__title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center"
            android:textColor="@color/base_yellow_ffd850"
            android:textIsSelectable="true"
            android:textSize="@dimen/dp_23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_binded_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/comic_long_press_copy_text"
            android:textSize="@dimen/dp_10" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comic_explain_text"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/comic_str1"
            android:textColor="@color/comic_999999" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/comic_str2"
            android:textColor="@color/comic_999999" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/comic_str3"
            android:textColor="@color/comic_999999" />
    </LinearLayout>


</RelativeLayout>