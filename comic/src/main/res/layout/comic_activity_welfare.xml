<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/comic_ffffff"
        app:leftIconRes="@drawable/icon_return"
        app:rightIconRes="@drawable/icon_share"
        app:rightIconVisible="visible"
        app:title="@string/comic_coin_center_text"
        app:titleColor="@color/comic_333333" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comic_welfare_daily_task_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>