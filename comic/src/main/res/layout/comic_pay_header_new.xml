<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_year"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:background="@drawable/comic_pay_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_59"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:src="@drawable/img_comic_pay_vip_open_svip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_59"
        android:layout_toRightOf="@id/cover"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header_year_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="365天SVIP+10000金币"
            android:textColor="@color/comic_000000"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pay_item_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="每天1块钱，全年免费看~"
            android:textColor="@color/comic_666666"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_16"
        android:text="365元"
        android:textStyle="bold"
        android:textColor="@color/base_333333"
        android:textSize="@dimen/dp_20" />
</RelativeLayout>