<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/welfare_sign_in_coins"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/comic_welfare_un_signin"
        android:gravity="bottom|center_horizontal"
        android:textColor="@color/comic_ffffff"
        android:visibility="gone" />

    <TextView
        android:id="@+id/welfare_signed_in_coins"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@drawable/comic_welfare_sifnin"
        android:gravity="top|center_horizontal"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/comic_ff2e2e" />

    <TextView
        android:id="@+id/welfare_sign_in_day"
        android:layout_width="@dimen/dp_33"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="center"
        android:textColor="@color/base_333333"
        android:textSize="@dimen/dp_10" />
</LinearLayout>