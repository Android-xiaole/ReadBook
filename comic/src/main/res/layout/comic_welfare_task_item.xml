<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">

    <ImageView
        android:id="@+id/comic_welfare_task_img"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/dp_9"
        android:src="@drawable/comic_welfare_open_vip" />

    <TextView
        android:id="@+id/comic_welfare_task_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/comic_welfare_task_img"
        android:textColor="@color/base_333333"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/comic_welfare_task_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_toRightOf="@id/comic_welfare_task_desc"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/comic_welfare_task_status"
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center"
        android:background="@drawable/comic_welfare_sign_bg"
        android:text="@string/comic_go_done"
        android:textColor="@color/comic_ffffff"
        android:textSize="@dimen/dp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/comic_half_dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/comic_welfare_task_img"
        android:background="@color/comic_e3e3e3"/>

</RelativeLayout>