<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/comic_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_recharge_center_text" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pay_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comic_tool_bar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shubi_Recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <Button
        android:id="@+id/pay_confirm_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@drawable/comic_subscribe_bg"
        android:text="@string/comic_recharge_now"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_18" />
</RelativeLayout>