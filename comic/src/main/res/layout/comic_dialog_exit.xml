<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_280"
    android:layout_height="@dimen/dp_180"
    android:background="@drawable/comic_shape_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/comic_logout_text"
        android:textColor="@color/base_333333"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_sign_success_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_remind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/comic_logout_remind"
        android:textColor="@color/comic_666666"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignTop="@id/dialog_exit_bottom"
        android:background="@color/comic_dddddd" />


    <LinearLayout
        android:id="@+id/dialog_exit_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/dialog_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/base_cancel"
            android:textColor="@color/comic_999999"
            android:textSize="@dimen/dp_18" />

        <View
            android:layout_width="@dimen/comic_half_dp"
            android:layout_height="match_parent"
            android:background="@color/comic_dddddd"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8" />

        <TextView
            android:id="@+id/dialog_exit_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/base_confirm"
            android:textColor="@color/base_yellow_ffd850"
            android:textSize="@dimen/dp_18" />
    </LinearLayout>

</RelativeLayout>