<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_recharge_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:id="@+id/item_recharge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_recharge_describe"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/comic_aeaeae"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/item_recharge_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/comic_fb7876"
        android:textSize="@dimen/dp_15" />
</RelativeLayout>