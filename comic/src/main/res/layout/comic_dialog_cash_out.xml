<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="请选择提现方式"
            android:textColor="@color/base_333333"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/base_pay_dialog_cancel"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_15"
            android:src="@drawable/base_vip_pay_cancel" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

    <LinearLayout
        android:id="@+id/base_pay_dialog_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/base_vip_pay_alipay"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="支付宝"
                android:textColor="@color/comic_6e7379"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="15dp"
            android:src="@drawable/base_vip_pay_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

    <LinearLayout
        android:id="@+id/base_pay_dialog_union"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_band_card"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="银行卡"
                android:textColor="@color/comic_6e7379"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="15dp"
            android:src="@drawable/base_vip_pay_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/pay_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/comic_a8adb3"
        android:textSize="@dimen/dp_14"
        android:visibility="gone"></TextView>

</LinearLayout>