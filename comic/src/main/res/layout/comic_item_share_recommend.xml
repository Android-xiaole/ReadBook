<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_135">

    <ImageView
        android:id="@+id/iv_cover_share"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_13"
        android:background="@drawable/bg_shadow"
        android:padding="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/tv_title_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_17"
        android:text="标题"
        android:textColor="@color/comic_313131"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_cover_share"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_desc_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_11"
        android:maxLines="2"
        android:textColor="@color/comic_353a40"
        android:textSize="@dimen/dp_13"
        app:layout_constraintLeft_toRightOf="@id/iv_cover_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_share"></TextView>

    <LinearLayout
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/dp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_icon_share"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/img_share"></ImageView>

        <TextView
            android:id="@+id/tv_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="@color/comic_353a40"
            android:textSize="@dimen/dp_14"></TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>