<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comic_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/comic_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_detail_return" />

            <View
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_batchBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_detail_buy"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_addBookTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/icon_detail_add_book" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_detail_share" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10">


                    <ImageView
                        android:id="@+id/iv_bookIcon"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="@dimen/dp_110"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_shadow"
                        android:padding="@dimen/dp_5"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/comic_333333"
                            android:textSize="@dimen/dp_14"
                            tools:text="书本名称" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_21"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/comic_a8adb3"
                                android:textSize="@dimen/dp_12"
                                tools:text="我是作者" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:text="|"
                                android:textColor="@color/comic_a8adb3"
                                android:textSize="@dimen/dp_12" />

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/comic_a8adb3"
                                android:textSize="@dimen/dp_12"
                                tools:text="书的类别" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_readNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:textColor="@color/comic_333333"
                            android:textSize="@dimen/dp_16"
                            tools:text="5.3万人" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已阅读"
                            android:textColor="@color/comic_a8adb3"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_30"
                        android:background="@color/comic_e8ebf0" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_shareNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:textColor="@color/comic_333333"
                            android:textSize="@dimen/dp_16"
                            tools:text="5.3万次" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已分享"
                            android:textColor="@color/comic_a8adb3"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_30"
                        android:background="@color/comic_e8ebf0" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_wordsNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:textColor="@color/comic_333333"
                            android:textSize="@dimen/dp_16"
                            tools:text="5.3万字" />

                        <TextView
                            android:id="@+id/tv_bookStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/comic_a8adb3"
                            android:textSize="@dimen/dp_12"
                            tools:text="连载中" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/comic_f4f6f9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="简介"
                        android:textColor="@color/comic_333333"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_23"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@color/comic_6e7379"
                        android:textSize="@dimen/dp_14"
                        tools:text="小说简介" />

                    <TextView
                        android:id="@+id/tv_moreInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="查看更多"
                        android:textColor="@color/comic_ffad70"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/comic_f4f6f9" />

                <LinearLayout
                    android:id="@+id/lin_catalogMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_catalogNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:textColor="@color/comic_6e7379"
                        android:textSize="@dimen/dp_14"
                        tools:text="共第206章" />

                    <TextView
                        android:id="@+id/tv_catalogTitle"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_19"
                        android:layout_marginRight="@dimen/dp_19"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/icon_home_right"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/comic_a8adb3"
                        android:textSize="@dimen/dp_14"
                        tools:text="测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题测试章节标题" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/comic_f4f6f9" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="相关推荐"
                    android:textColor="@color/comic_333333"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recommendList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20" />


            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/comic_f5f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/lin_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:src="@drawable/icon_detail_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:text="分享赚钱"
                            android:textColor="@color/comic_363636"
                            android:textSize="@dimen/dp_14" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/comic_f5f5f5" />

                    <LinearLayout
                        android:id="@+id/lin_addBook"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_4">

                        <ImageView
                            android:id="@+id/iv_addBookBottom"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:src="@drawable/icon_detail_add_book" />

                        <TextView
                            android:id="@+id/tv_addBookBottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:text="加入书架"
                            android:textColor="@color/comic_363636"
                            android:textSize="@dimen/dp_14" />

                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/comic_f5f5f5" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/comic_ffa248"
                android:gravity="center"
                android:text="免费试读"
                android:textColor="@color/comic_ffffff"
                android:textSize="@dimen/dp_20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="-65dp"
        android:background="@color/comic_ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:paddingTop="@dimen/dp_32">

            <ImageView
                android:id="@+id/iv_back_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/icon_read_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="目录"
                android:textColor="@color/comic_353a40"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/comic_e8ebf0" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18"
                android:textColor="@color/comic_353a40"
                android:textSize="@dimen/dp_14"
                tools:text="共998章" />

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/comic_shape_read_catalog_sort_text_bg"
                android:drawableRight="@drawable/icon_read_catalog_desc"
                android:drawablePadding="6dp"
                android:paddingLeft="@dimen/dp_7"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_5"
                android:text="倒序"
                android:textColor="@color/comic_a8adb3"
                android:textSize="@dimen/dp_10" />

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_catalogList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_21" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>