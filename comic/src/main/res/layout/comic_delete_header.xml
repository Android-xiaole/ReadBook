<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookshelf_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_alignParentBottom="true"
    android:background="@color/comic_eeeeee"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/comic_bookshelf_select"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/comic_bookshelf_select_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/comic_btn_select"
            android:paddingLeft="@dimen/dp_8"
            android:text="@string/comic_select_all_text"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_vertical"
        android:background="@color/comic_cccccc"></View>

    <FrameLayout
        android:id="@+id/comic_bookshelf_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/comic_bookshelf_delete_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/comic_delete_selector"
            android:paddingLeft="@dimen/dp_8"
            android:text="@string/comic_delete_text"
            android:textColor="@drawable/comic_delete_bg"
            android:textSize="@dimen/dp_16" />

    </FrameLayout>
</LinearLayout>