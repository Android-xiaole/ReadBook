<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_numTop"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/img_comic_detail_reward_biankuang"
        android:gravity="center"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_12"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gifIcon"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_69"
            tools:src = "@drawable/img_comic_reward_gif_default"/>

        <TextView
            android:id="@+id/tv_gifName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="5"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_12"/>

        <TextView
            android:id="@+id/tv_numBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/comic_reward_textc"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

</FrameLayout>