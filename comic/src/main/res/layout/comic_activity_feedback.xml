<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_feed_back_text" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/comic_activity_sendcomment_etbg"
        android:gravity="left|top"
        android:hint="@string/comic_feedback_hint"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/dp_12" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/comic_333333"
        android:background="@drawable/comic_shape_feedback_btn_bg"
        android:text="@string/comic_report_text"
        android:textSize="@dimen/dp_18" />

    <TextView
        android:id="@+id/tv_kefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/comic_ff2e2e"
        android:textSize="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:text="紧急情况请联系客服（点我跳转）"/>
</LinearLayout>