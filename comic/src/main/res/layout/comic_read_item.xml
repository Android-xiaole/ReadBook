<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comic_read_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/comic_read_reward"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#FFFCF1"
        android:gravity="center"
        android:orientation="vertical">

        <!--<include-->
        <!--layout="@layout/comic_read_comic_item"-->
        <!--android:background="@android:color/transparent"></include>-->

        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/img_comic_read_reward_icon_dashang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22">

            <LinearLayout
                android:id="@+id/lin_comic_read_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comic_read_collection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_comic_read_uncollection_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="收藏"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_comic_read_favor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comic_read_favor"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_comic_read_reward_dianzan_false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="点赞"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_comic_read_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comic_read_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_comic_read_pinglun_dashang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="评论"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/img_comic_read_reward_tuhao" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_rewardList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:id="@+id/lin_comic_read_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comic_select_read_up_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="上一话"
                    android:textColor="@drawable/comic_select_read_upordown_textc" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_comic_read_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:text="下一话"
                    android:textColor="@drawable/comic_select_read_upordown_textc" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comic_select_read_down_icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>