<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#00000000">

    <ImageView
        android:id="@+id/share_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxHeight="530dp"
        android:maxWidth="343dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="matrix"
        android:src="@drawable/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_below="@id/share_image"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/comic_ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shareMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20" />

        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/dp_335"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/comic_dddddd" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/base_cancel"
            android:textColor="@color/comic_999999"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>
</LinearLayout>