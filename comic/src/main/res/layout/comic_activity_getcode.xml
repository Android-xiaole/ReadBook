<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_ffffff"
    android:gravity="center_horizontal">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入验证码"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_64"
        android:textColor="@color/comic_353a40"
        android:textSize="@dimen/dp_24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已通过短信发送至"
            android:textColor="@color/comic_999999"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/comic_666666"
            tools:text="+86 155 5555 5555"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_65">


        <EditText
            android:id="@+id/et_code"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_35"
            android:background="@null"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/comic_333333"
            android:textColorHint="@color/comic_999999"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新获取验证码"
            android:textColor="@drawable/comic_select_get_code_text_color"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>

    <View
        android:id="@+id/divider_username"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_1"
        android:background="#33ffad70" />

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="331dp"
        android:layout_height="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_40"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/btn_regsiter" />

</LinearLayout>