<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="@drawable/comic_pay_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pay_item_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@drawable/comic_pay_select"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_item_coin"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/pay_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/comic_pay_send_select"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/pay_item_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/comic_ff4c5d"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/pay_item_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_comic_pay_shuangbeubiaoqian" />
</RelativeLayout>