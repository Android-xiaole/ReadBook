<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_ffffff">

    <TextView
        android:id="@+id/tv_skipBind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_33"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_13"
        android:text="跳过手机绑定"/>

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="37dp"
        tools:src = "@drawable/icon_login_logo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/comic_353a40"
        tools:text="昵称"/>

    <LinearLayout
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 86"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_17" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_21"
            android:background="#33ffad70" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="@null"
            android:hint="@string/comic_input_phone_number"
            android:maxLength="11"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/comic_333333"
            android:textColorHint="@color/comic_999999"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_1"
        android:background="#33ffad70" />


    <ImageButton
        android:id="@+id/btn_get_code"
        android:layout_width="331dp"
        android:layout_height="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/btn_login_getcode" />

</LinearLayout>