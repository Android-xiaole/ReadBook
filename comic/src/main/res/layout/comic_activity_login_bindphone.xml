<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_ffffff"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定手机号"
        android:paddingLeft="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_110"
        android:textColor="@color/comic_ffad70"
        android:textSize="@dimen/dp_20"
        />

    <LinearLayout
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_51"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 86"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_17" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_21"
            android:background="#33ffad70" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="@null"
            android:hint="@string/comic_input_phone_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/comic_333333"
            android:textColorHint="@color/comic_999999"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <View
        android:id="@+id/divider_username"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_1"
        android:background="#33ffad70" />

    <LinearLayout
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_5">

        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/comic_input_code"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/comic_333333"
                android:textColorHint="@color/comic_999999"
                android:textSize="@dimen/dp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#33ffad70" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="@drawable/comic_login_code"
            android:gravity="center"
            android:text="@string/comic_get_code"
            android:textColor="@drawable/comic_select_login_code_text_color"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_commit"
        android:layout_width="331dp"
        android:layout_height="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_56"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/btn_login_bindphone" />

</LinearLayout>