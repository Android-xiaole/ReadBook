<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/comic_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_rebate_cash_out_way" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/comic_tool_bar"
        android:background="@color/comic_e8ebf0"></View>

    <com.jj.comics.widget.UserItemView
        android:id="@+id/btn_add_ali"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:bottom_line_visible="visible"
        app:title_size="@dimen/dp_15"
        app:user_item_title="添加支付宝"></com.jj.comics.widget.UserItemView>

    <com.jj.comics.widget.UserItemView
        android:id="@+id/btn_add_union"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:bottom_line_visible="visible"
        app:title_size="@dimen/dp_15"
        app:user_item_title="添加银行卡"></com.jj.comics.widget.UserItemView>

</LinearLayout>