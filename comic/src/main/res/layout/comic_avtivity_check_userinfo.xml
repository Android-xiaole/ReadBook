<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_comic_userinfo"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:id="@+id/comic_userinfo_head_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back_userinfo"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:padding="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_back_white" />

            <TextView
                android:id="@+id/tv_userinfo_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:padding="@dimen/dp_12"
                android:text="@string/comic_edit_text"
                android:textColor="@color/comic_ffffff"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:id="@+id/comic_userinfo_head"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_77"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_60"
                android:background="@drawable/comic_head_bg"
                android:src="@drawable/icon_user_avatar_default" />

            <ImageView
                android:id="@+id/iv_userinfo_sex"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_25_r"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_toRightOf="@id/comic_userinfo_head"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_user_sex_man" />


            <TextView
                android:id="@+id/tv_userinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_65"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_toRightOf="@id/comic_userinfo_head"
                android:maxLines="1"
                android:text="@string/comic_click_login_text"
                android:textColor="@color/comic_ffffff"
                android:textSize="@dimen/dp_18" />

            <RelativeLayout
                android:id="@+id/rl_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_userinfo_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/comic_userinfo_head">

                <TextView
                    android:id="@+id/tv_userinfo_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/comic_f9f9f9"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_userinfo_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_userinfo_area"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/comic_ff9933"
                    android:textSize="@dimen/dp_12" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_userinfo_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_tv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_toRightOf="@id/comic_userinfo_head"
                android:clickable="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/comic_ffffff"
                android:textSize="@dimen/dp_12" />


        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header_container"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/base_333333"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMode="fixed"
        app:tabRippleColor="@null"></com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/divider_userinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/tl_userinfo"
        android:background="@color/comic_f5f5f5"></View>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_userinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_userinfo"
        android:paddingBottom="@dimen/dp_5"></androidx.viewpager.widget.ViewPager>

</RelativeLayout>