<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/comic_ffffff"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_sort_cover"
        android:layout_width="@dimen/dp_91"
        android:layout_height="@dimen/dp_115" />

    <TextView
        android:id="@+id/tv_sort_title"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_sort_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/comic_ffffff"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sort_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sort_title"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_sort_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_sort_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_sort_cover"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toRightOf="@id/iv_sort_cover"
        android:maxLines="1"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_12" />

    <ImageView
        android:id="@+id/iv_sort_img"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_13"
        android:layout_alignBottom="@id/tv_sort_update"
        android:layout_marginLeft="@dimen/dp_250"
        android:src="@drawable/sort_hot" />


    <TextView
        android:id="@+id/tv_sort_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_sort_img"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_toRightOf="@id/iv_sort_img"
        android:maxLines="1"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_12" />


</RelativeLayout>