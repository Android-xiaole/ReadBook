<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_210"
        android:layout_height="@dimen/dp_180"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/comic_bg_dialog_pay_progress"
        android:orientation="vertical">


        <ProgressBar
            android:indeterminateTint="@color/comic_ffffff"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"></ProgressBar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="处理中..."
            android:textColor="@color/comic_ffffff"
            android:textSize="@dimen/dp_18"></TextView>
    </LinearLayout>
</RelativeLayout>