<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comic_select_pay_type"
        android:textColor="@color/comic_9d9ea3"
        android:textSize="@dimen/dp_14"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/pay_wx_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/comic_pay_wx_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_comic_pay_wx_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/comic_pay_by_wx"
                android:textColor="@color/comic_ffffff"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:id="@+id/pay_wx_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_comic_pay_checked" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_alipay_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/comic_pay_alipay_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_comic_pay_alipay_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/comic_pay_by_zfb"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:id="@+id/pay_alipay_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_comic_pay_checked" />
        </LinearLayout>

    </LinearLayout>
    <!--android:drawableEnd="@drawable/qq_red"-->
    <TextView
        android:id="@+id/pay_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_80"
        android:drawablePadding="@dimen/dp_5"
        android:lineSpacingExtra="@dimen/dp_15"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/pay_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/comic_363636"
        android:textSize="@dimen/dp_14"
        android:visibility="gone" />
</LinearLayout>