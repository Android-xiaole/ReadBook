<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_f4f6f9"
    android:orientation="vertical">


    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/nickname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTextString="保存"
        app:rightTextVisibleToolbar="visible"
        app:title="@string/comic_user_info_edit_nickname" />

    <LinearLayout
        android:id="@+id/alter_nick_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_10"
        android:focusable="false"
        android:background="@color/comic_ffffff"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edit_nick_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/comic_17"
            android:layout_weight="1"
            android:background="@null"
            android:text="我是山东"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/comic_333333" />

        <ImageView
            android:id="@+id/edit_nick_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/comic_999999" />
    </LinearLayout>

</LinearLayout>