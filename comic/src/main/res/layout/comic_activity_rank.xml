<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_rank_text"
        app:titleColor="@color/comic_333333"
        app:leftIconRes="@drawable/icon_return"
        app:backgroundColor="@color/comic_ffffff"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comic_ffffff"
        app:tabGravity="fill"
        app:tabIndicator="@null"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/comic_ffffff"
        app:tabTextAppearance="@style/comic_tab_text_14"
        app:tabTextColor="@color/comic_666666">

    </com.google.android.material.tabs.TabLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/comic_yellow_ffd850"
        android:visibility="gone"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


</LinearLayout>