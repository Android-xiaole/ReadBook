<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:background="@color/comic_f4f6f9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:id="@+id/item_recommend_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_recommend_navigation_home" />

        <TextView
            android:id="@+id/item_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="@color/comic_353a40"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_loadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_7"
            android:drawableRight="@drawable/img_comic_read_jiantou_dashang_black_right"
            android:text="更多"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_13"
            android:textColor="@color/comic_333333"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_recommend_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />

    <View
        android:background="@color/comic_f4f6f9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5">
    </View>
</LinearLayout>