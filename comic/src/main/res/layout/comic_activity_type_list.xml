<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/recommend_list_bar"
        style="@style/comic_style_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recommend_list_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_12"
                android:text="返回"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/recommend_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_12"
                android:text="火爆新作"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_18" />


            <ImageView
                android:id="@+id/recommend_list_home"
                style="@style/comic_style_home_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_comic_home" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/recommend_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommend_list_bar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommend_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/recommend_list_float_btn"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/comic_to_top_bg"
        android:clickable="true"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_comic_to_top"
        android:visibility="gone" />

</RelativeLayout>