<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_8">


    <ImageView
        android:id="@+id/item_bookshelf_img"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_5"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/item_bookshelf_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_bookshelf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="top"
            android:textColor="@color/comic_363636"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/item_bookshelf_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/comic_989898"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/item_bookshelf_record"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textColor="@color/comic_989898"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_bookShelf_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comic_continue"
            android:text="@string/comic_read_continue"
            android:textColor="@color/comic_989898"
            android:textSize="@dimen/dp_14" />

        <CheckBox
            android:id="@+id/item_bookshelf_select"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:button="@drawable/base_button_checkbox"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>