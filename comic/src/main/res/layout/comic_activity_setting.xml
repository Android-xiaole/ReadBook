<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_f4f6f9"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/bind_phone_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_setting_text" />

    <com.jj.comics.widget.UserItemView
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="10dp"
        app:bottom_line_visible="visible"
        app:head_img_visible="gone"

        app:user_item_title="@string/comic_about_app" />

    <com.jj.comics.widget.UserItemView
        android:id="@+id/setting_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:bottom_line_visible="gone"
        app:head_img_visible="gone"
        app:right_text="3M"
        app:right_title_visible="visible"
        app:user_item_title="@string/comic_clear_cache" />


    <LinearLayout
        android:id="@+id/user_info_edit_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/comic_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="1"
            android:text="@string/comic_user_info_auto_bug"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_18" />

        <Switch
            android:id="@+id/switch_autoBuy"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:checked="false"
            android:switchMinWidth="@dimen/dp_55"
            android:textOff="OFF"
            android:textOn="ON"
            android:thumb="@drawable/comic_switch_thumb"
            android:track="@drawable/comic_switch_track"
            android:layout_marginRight="@dimen/dp_17"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/comic_ffffff"
        android:gravity="center"
        android:text="@string/comic_logout_text"
        android:textColor="@color/comic_999999" />
</LinearLayout>