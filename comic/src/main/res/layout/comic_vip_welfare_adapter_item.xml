<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_5"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/comic_vip_task_welfare_item_bg"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/comic_vip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/comic_ffffff"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comic_can_receive"
            android:textColor="@color/comic_ffffff"
            android:textSize="@dimen/dp_14"/>

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/comic_vip_task_welfare_item_jinbi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comic_vip_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_yellow_ffd850"
                android:textSize="@dimen/dp_22"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_yellow_ffd850"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/comic_coin_text"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/comic_vip_take"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:text="@string/comic_receive_welfare"
        android:textColor="@color/comic_ffffff"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="@drawable/comic_vip_item_adapter_buy_bg"
        android:textSize="@dimen/dp_14" />

</LinearLayout>