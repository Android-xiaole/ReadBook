<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_bg_dialog_countdown_action1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_30"
                android:textStyle="bold"
                tools:text = "80"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_15"
                android:text = "秒"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_80"
            android:layout_gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/comic_333333"
                android:textStyle="bold"
                android:text="充值"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_25"
                android:textColor="@color/comic_ff1212"
                android:textStyle="bold"
                tools:text="18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/comic_333333"
                android:textStyle="bold"
                android:text="赠送"/>

            <TextView
                android:id="@+id/tv_givePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_25"
                android:textColor="@color/comic_ff1212"
                android:textStyle="bold"
                tools:text="30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_25"
                android:textColor="@color/comic_ff1212"
                android:textStyle="bold"
                android:text="元"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_toPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我抢购"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/comic_ffffff"
            android:background="@drawable/img_btn_dialog_countdown_action1"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_icon_dialog_countdown_close_action1"/>

</LinearLayout>