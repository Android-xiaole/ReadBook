<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_recommend_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_168"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/item_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/comic_recommend_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableLeft="@drawable/icon_comic_detail_fire"
            android:drawablePadding="@dimen/dp_3"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_12" />

    </RelativeLayout>

</LinearLayout>