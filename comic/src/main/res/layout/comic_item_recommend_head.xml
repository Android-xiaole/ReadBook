<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:layout_marginBottom="@dimen/dp_10">


    <ImageView
        android:id="@+id/item_recommend_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        android:background="@drawable/bg_shadow"
        android:padding="@dimen/dp_5"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/item_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toRightOf="@id/item_recommend_img"
        android:textColor="@color/comic_353a40"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_recommend_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_recommend_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@id/item_recommend_img"
        android:drawablePadding="@dimen/dp_3"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/comic_6e7379"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/item_recommend_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/item_recommend_img"
        android:text="佚名"
        android:textColor="@color/comic_a8adb3"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/item_recommend_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="连载中"
        android:textColor="@color/comic_a8adb3"
        android:textSize="@dimen/dp_12" />


</RelativeLayout>