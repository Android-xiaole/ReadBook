<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/comic_detail_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="@dimen/dp_8"
        android:textColor="@color/comic_666666"
        android:textSize="@dimen/dp_14"
        tools:text="作品简介："/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comic_17"
        android:layout_marginBottom="@dimen/comic_17"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comic_detail_icon_comment"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_14"
                tools:text="评论 999"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_favorCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comic_detail_icon_gray_like"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_14"
                tools:text="点赞 999"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_fireCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comic_detail_icon_fire"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_14"
                tools:text="人气 999"/>
        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/comic_f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/img_tuhao"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/comic_detail_like"
            android:text="@string/comic_rich_reward_text"
            android:textColor="@color/comic_363636"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reward"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/comic_f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/img_pinglun_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comic_wonderful_comment_text"
            android:textColor="@color/upsdk_black"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_toComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表评论"
            android:textSize="16sp"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/comic_333333"
            android:drawableLeft="@drawable/img_pinglun_right"/>

        <TextView
            android:id="@+id/tv_lookMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多评论"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_gravity="right"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/comic_999999"
            android:drawableRight="@drawable/img_comic_detail_comment_lookmore"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/comic_f5f5f5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_5"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/comic_detail_like"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_comic_recommend_list" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/comic_detail_like"
            android:text="@string/comic_guess_like"
            android:textColor="@color/comic_363636"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/comic_detail_refresh"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_4"
            android:scaleType="fitXY"
            android:src="@drawable/img_shaxin" />

    </RelativeLayout>
</LinearLayout>