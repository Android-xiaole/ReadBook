<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_55"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:src="@drawable/img_comic_reward_head_biankuang" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13.5dp"
            android:src="@drawable/icon_user_avatar_default" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_coinNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="-6dp"
        android:background="@drawable/comic_shape_reward_textbg"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:singleLine="true"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_10" />

</LinearLayout>