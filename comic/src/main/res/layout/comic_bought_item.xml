<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginBottom="@dimen/dp_14">

    <ImageView
        android:id="@+id/iv_item_bought_cover"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@drawable/img_base_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tv_item_bought_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:hint="校花的终极保安"
        android:maxLines="1"
        android:textColor="@color/comic_353a40"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_item_bought_cover"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/tv_item_bought_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_15"
        android:maxLines="3"
        android:textColor="@color/comic_6e7379"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toRightOf="@id/iv_item_bought_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_item_bought_title"></TextView>

    <TextView
        android:id="@+id/tv_item_bought_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_11"
        android:maxLines="1"
        android:textColor="@color/comic_a8adb3"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_item_bought_cover"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>