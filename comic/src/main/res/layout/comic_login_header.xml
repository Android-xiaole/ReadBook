<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/comic_f5f5f5"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/comic_no_login_remind"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/comic_header_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/comic_login_header_bg"
        android:text="@string/comic_login_text"
        android:textColor="@color/comic_ffffff"
        android:textSize="@dimen/dp_15" />
</RelativeLayout>