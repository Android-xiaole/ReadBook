<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/comic_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTextString="保存"
        app:rightTextVisibleToolbar="visible"
        app:title="@string/comic_rebate_cash_out_add_ali" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/comic_tool_bar"
        android:background="@color/comic_e8ebf0"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="支付宝账号"
            android:textColor="@color/comic_a8adb3"
            android:textSize="@dimen/dp_15"></TextView>

        <EditText
            android:id="@+id/et_ali_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/dp_15"></EditText>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/comic_e8ebf0"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/comic_a8adb3"
            android:textSize="@dimen/dp_15"></TextView>

        <EditText
            android:id="@+id/et_ali_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inputType="text"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/dp_15"></EditText>

    </LinearLayout>


</LinearLayout>