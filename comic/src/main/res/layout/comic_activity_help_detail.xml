<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jj.comics.widget.comic.toolbar.ComicToolBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_help_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_17"
                android:text="说明"
                android:textColor="@color/comic_2c3238"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tv_help_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_17"
                android:textColor="@color/comic_2c3238"
                android:textSize="@dimen/dp_14">

            </TextView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>