<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_statusbar_view_shelf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/base_yellow_ffd850" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookshelf_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/fake_statusbar_view"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bookshelf_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/bookshelf_recycler"
        android:layout_alignParentBottom="true"
        android:background="@color/comic_eeeeee"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/comic_bookshelf_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comic_bookshelf_select_iv"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@drawable/comic_btn_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/comic_select_all_text"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_16" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:background="@color/comic_cccccc"></View>

        <LinearLayout
            android:id="@+id/comic_bookshelf_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comic_bookshelf_delete_iv"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@drawable/comic_delete_selector" />

            <TextView
                android:id="@+id/comic_bookshelf_delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/comic_delete_text"
                android:textColor="@drawable/comic_delete_bg"
                android:textSize="@dimen/dp_16" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>