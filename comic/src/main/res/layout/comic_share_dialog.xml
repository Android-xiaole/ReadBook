<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/comic_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="@dimen/dp_125"
            android:layout_height="0.5dp"
            android:background="#ddd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="@string/comic_share_to_text"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_16" />

        <View
            android:layout_width="@dimen/dp_125"
            android:layout_height="0.5dp"
            android:background="#ddd" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shareMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="@dimen/dp_335"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/comic_dddddd" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="@string/base_cancel"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_16" />
</LinearLayout>