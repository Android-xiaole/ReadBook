<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/item_typeList_img"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_85"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_85"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/item_typeList_img"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_typeList_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="top"
            android:textColor="@color/comic_363636"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/item_typeList_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/comic_989898"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/item_typeList_des"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:textColor="@color/comic_989898"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_bookShelf_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_comic_userinfo_comment_delete"
        android:visibility="gone" />
</RelativeLayout>