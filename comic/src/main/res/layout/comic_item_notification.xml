<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_17"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_14">

    </TextView>

    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notification_title"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17"
        android:textColor="@color/comic_999999"
        android:textSize="@dimen/dp_13"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/comic_e8ebf0"
        android:layout_below="@id/tv_notification_time"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"></View>


</RelativeLayout>