<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_f4f6f9"
    android:orientation="vertical">


    <com.jj.comics.widget.comic.toolbar.ComicToolBar
        android:id="@+id/nickname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/comic_user_info_edit_sex" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/comic_ffffff"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="1"
            android:text="男"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_15" />

        <CheckBox
            android:id="@+id/check_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:button="@drawable/comic_checkbox_selector"/>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/comic_e8ebf0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="@color/comic_ffffff"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="1"
            android:text="女"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_15" />

        <CheckBox
            android:id="@+id/check_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/comic_checkbox_selector"
            android:layout_marginRight="@dimen/dp_14"/>
    </LinearLayout>

</LinearLayout>