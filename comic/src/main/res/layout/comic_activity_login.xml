<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/icon_login_logo" />

    <LinearLayout
        android:id="@+id/comic_login_username"
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 86"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_17" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_21"
            android:background="#33ffad70" />

        <EditText
            android:id="@+id/comic_login_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="@null"
            android:hint="@string/comic_input_phone_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/comic_333333"
            android:textColorHint="@color/comic_999999"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <View
        android:id="@+id/divider_username"
        android:layout_width="@dimen/dp_310"
        android:layout_height="@dimen/dp_1"
        android:background="#33ffad70" />

    <LinearLayout
        android:id="@+id/comic_login_password"
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_5">

        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/comic_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/comic_input_code"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/comic_333333"
                android:textColorHint="@color/comic_999999"
                android:textSize="@dimen/dp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#33ffad70" />
        </LinearLayout>

        <TextView
            android:id="@+id/comic_login_code"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="@drawable/comic_login_code"
            android:gravity="center"
            android:text="@string/comic_get_code"
            android:textColor="@drawable/comic_select_login_code_text_color"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/comic_login_btn"
        android:layout_width="331dp"
        android:layout_height="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_56"
        android:background="@drawable/btn_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="—    其他登录方式    —"
        android:textColor="@color/comic_cccccc"
        android:textSize="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_39"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_wxLogin"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:src="@drawable/icon_comic_login_weixin" />

        <ImageView
            android:id="@+id/iv_qqLogin"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_80"
            android:src="@drawable/icon_comic_login_qq" />

        <ImageView
            android:id="@+id/iv_wbLogin"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:src="@drawable/icon_comic_login_weibo" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_15">

        <CheckBox
            android:id="@+id/comic_login_agree"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:button="@drawable/comic_login_agreement"
            android:checked="true" />

        <TextView
            android:id="@+id/comic_login_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/comic_agree_app_ment"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

</LinearLayout>