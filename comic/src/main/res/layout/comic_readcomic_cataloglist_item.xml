<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_32"
    android:background="@drawable/comic_readcomic_cataloglist_item_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_lockIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        tools:src="@drawable/img_comic_read_cataloglist_jiesuo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@drawable/comic_readcomic_cataloglist_item_textc"
        android:textSize="@dimen/dp_13" />

</LinearLayout>