<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_38"
    android:paddingRight="@dimen/dp_38"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_last_chapter"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_44"
        android:textColor="@color/comic_ffad70"
        android:textSize="@dimen/dp_18"
        android:gravity="center"
        android:background="@drawable/shape_readview_last_btn"
        android:text="上一章"/>

    <View
        android:id="@+id/view_fgt"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_1"/>

    <TextView
        android:id="@+id/tv_next_chapter"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_44"
        android:textColor="@color/comic_ffffff"
        android:textSize="@dimen/dp_18"
        android:gravity="center"
        android:background="@drawable/shape_readview_next_btn"
        android:text="下一章"/>

</LinearLayout>