<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comic_pay_bg">

    <TextView
        android:id="@+id/pay_item_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_item_send"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_centerHorizontal="true"
        android:text="30元"
        android:layout_marginBottom="@dimen/dp_19"
        android:textColor="@drawable/comic_pay_select"
        android:textSize="@dimen/dp_14"/>

    <TextView
        android:id="@+id/pay_item_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="3000金币"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/pay_item_message"
        android:textColor="@drawable/comic_pay_select"
        android:textSize="@dimen/dp_21" />

    <TextView
        android:id="@+id/pay_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:textStyle="bold"
        android:text="3000金币"
        android:textColor="@drawable/comic_pay_select"
        android:textSize="@dimen/dp_21" />

    <ImageView
        android:id="@+id/pay_item_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_comic_pay_shuangbeubiaoqian" />
</RelativeLayout>