<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jj.comics.widget.bookreadview.PageView
            android:id="@+id/mPageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/lin_topMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:background="@drawable/comic_select_read_menu_bg_color"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_32"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/comic_select_read_return" />

            <View
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comic_select_read_buy" />

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/icon_read_collect" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/comic_select_read_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_bottomMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            android:background="@drawable/comic_select_read_menu_bg_color"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/lin_textSetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字号"
                    android:textColor="@color/comic_353a40"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="A"
                    android:textColor="@color/comic_353a40"
                    android:textSize="@dimen/dp_12" />

                <com.jj.comics.widget.bubbleview.BubbleSeekBar
                    android:id="@+id/sb_textSetting"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    app:bsb_auto_adjust_section_mark="true"
                    app:bsb_bubble_color="@drawable/comic_select_read_text_setting_seekbar_color"
                    app:bsb_bubble_text_color="@color/comic_e8ebf0"
                    app:bsb_bubble_text_size="18sp"
                    app:bsb_max="40"
                    app:bsb_min="10"
                    app:bsb_second_track_color="@drawable/comic_select_read_text_setting_seekbar_color"
                    app:bsb_section_count="5"
                    app:bsb_show_section_mark="true"
                    app:bsb_thumb_text_size="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="A"
                    android:textColor="@color/comic_353a40"
                    android:textSize="@dimen/dp_16" />

            </LinearLayout>

            <View
                android:id="@+id/view_fgx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@drawable/comic_select_read_text_setting_fgx_bg"
                android:visibility="gone"
                tools:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49">

                <LinearLayout
                    android:id="@+id/lin_makeMoney"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comic_select_read_makemoney" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="赚"
                        android:textColor="@drawable/comic_select_read_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_catalogBtn"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comic_select_read_catalog" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="目录"
                        android:textColor="@drawable/comic_select_read_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_textStyle"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comic_select_read_text_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="字体"
                        android:textColor="@drawable/comic_select_read_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_eyeModel"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comic_select_read_eye" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="护眼"
                        android:textColor="@drawable/comic_select_read_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_nightModel"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_nightModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comic_select_read_night" />

                    <TextView
                        android:id="@+id/tv_nightModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="夜间"
                        android:textColor="@drawable/comic_select_read_text_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="-65dp"
        android:background="@color/comic_ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:paddingTop="@dimen/dp_32">

            <ImageView
                android:id="@+id/iv_back_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/icon_read_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="目录"
                android:textColor="@color/comic_353a40"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/comic_e8ebf0" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18"
                android:textColor="@color/comic_353a40"
                android:textSize="@dimen/dp_14"
                tools:text="共998章" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comic_a8adb3"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_gravity="right|center_vertical"
                android:text="倒序"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_catalogList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_21" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>