<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_115">

    <RelativeLayout
        android:id="@+id/container_img"
        android:background="@drawable/bg_shadow"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_115">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/item_recommend_img"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerCrop"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/item_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@id/container_img"
        android:maxLines="2"
        android:textColor="@color/comic_353a40"
        android:textSize="@dimen/dp_14"
        tools:text="11111111111" />

    <ImageView
        android:id="@+id/item_recommend_share"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_toRightOf="@id/container_img"
        android:background="@drawable/btn_share_gray" />


    <TextView
        android:id="@+id/item_recommend_share_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@id/item_recommend_share"
        android:maxLines="1"
        android:textColor="@color/comic_a8adb3"
        android:textSize="@dimen/dp_12"
        android:text="100万次" />

</RelativeLayout>