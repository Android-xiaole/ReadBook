<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_recommend_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:scaleType="centerCrop"
        tools:background="@drawable/icon"/>

    <TextView
        android:layout_below="@id/item_recommend_img"
        android:id="@+id/item_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:maxLines="1"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/comic_333333"
        android:textSize="@dimen/dp_14"
        tools:text = "11111111111"/>

    <TextView
        android:layout_below="@id/item_recommend_name"
        android:id="@+id/item_recommend_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/comic_9fa19f"
        android:textSize="@dimen/dp_12"
        tools:text = "11111111111"/>

</RelativeLayout>