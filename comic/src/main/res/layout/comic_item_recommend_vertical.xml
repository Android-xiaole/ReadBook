<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_115"
    android:paddingTop="@dimen/dp_7"
    android:paddingBottom="@dimen/dp_7">


    <ImageView
        android:id="@+id/item_recommend_img"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_115"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/bg_shadow"
        android:padding="@dimen/dp_5"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/item_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@id/item_recommend_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/comic_353a40"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold"
        tools:text="11111111111" />

    <ImageView
        android:id="@+id/item_recommend_share"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_toRightOf="@id/item_recommend_img"
        android:background="@drawable/btn_share_gray" />


    <TextView
        android:id="@+id/item_recommend_share_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_toRightOf="@id/item_recommend_share"
        android:maxLines="1"
        android:text="0æ¬¡"
        android:textColor="@color/comic_a8adb3"
        android:textSize="@dimen/dp_12" />

</RelativeLayout>