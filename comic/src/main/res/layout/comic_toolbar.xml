<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    app:elevation="0dp"
    style="@style/comic_style_app_bar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_leftIcon"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_12"
            tools:src="@drawable/icon_back_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp_12"
            tools:text="标题"
            android:textColor="@color/comic_ffffff"
            android:textSize="@dimen/dp_18" />


        <ImageView
            android:id="@+id/iv_rightIcon"
            style="@style/comic_style_home_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:src="@drawable/icon_comic_home"
            android:visibility="gone" />

    </RelativeLayout>
</com.google.android.material.appbar.AppBarLayout>