<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_ffffff">

    <LinearLayout
        android:id="@+id/user_info_edit_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/comic_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="1"
            android:textColor="@color/comic_333333"
            android:textSize="@dimen/dp_15" />

        <ImageView
            android:id="@+id/user_info_head_img"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_user_avatar_default" />

        <TextView
            android:id="@+id/right_title"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/right_img"
            android:layout_width="8dp"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/icon_comic_mine_navigation" />
    </LinearLayout>


    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/comic_e8ebf0" />
</RelativeLayout>