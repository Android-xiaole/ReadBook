<?xml version="1.0" encoding="utf-8"?><!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/comic_ffffff" />
            <!-- 按钮四个圆角       	radius:半径 -->
            <corners android:bottomLeftRadius="@dimen/dp_3" android:bottomRightRadius="@dimen/dp_3" android:topLeftRadius="@dimen/dp_3" android:topRightRadius="@dimen/dp_3" />
            <solid android:color="@color/comic_00000000"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="@dimen/dp_5" android:left="@dimen/dp_35" android:right="@dimen/dp_35" android:top="@dimen/dp_5" />
        </shape>
    </item>

    <!-- 焦点 -->
    <item android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/comic_ffffff" />
            <!-- 按钮四个圆角       	radius:半径 -->
            <corners android:bottomLeftRadius="@dimen/dp_3" android:bottomRightRadius="@dimen/dp_3" android:topLeftRadius="@dimen/dp_3" android:topRightRadius="@dimen/dp_3" />
            <solid android:color="@color/comic_00000000"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="@dimen/dp_5" android:left="@dimen/dp_35" android:right="@dimen/dp_35" android:top="@dimen/dp_5" />
        </shape>
    </item>

    <!-- 无焦点 -->
    <item>
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/comic_ffffff" />
            <!-- 按钮四个圆角      	radius:半径 -->
            <corners android:bottomLeftRadius="@dimen/dp_3" android:bottomRightRadius="@dimen/dp_3" android:topLeftRadius="@dimen/dp_3" android:topRightRadius="@dimen/dp_3" />
            <solid android:color="@color/comic_00000000"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="@dimen/dp_5" android:left="@dimen/dp_35" android:right="@dimen/dp_35" android:top="@dimen/dp_5" />
        </shape>
    </item>

</selector>