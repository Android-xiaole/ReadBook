<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comic_yellow_ffd850">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_250"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/dp_30"
            android:scaleType="fitEnd"
            android:src="@drawable/img_logo_transparent_bg" />

        <RelativeLayout
            android:id="@+id/rl_contanier_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/base_bg_dialog_shape"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/dp_20">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/comic_login_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/comic_333333"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="@dimen/dp_1"
                app:tabMode="scrollable"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@color/comic_333333"
                app:tabTextAppearance="@style/comic_tab_text_18"
                app:tabTextColor="@color/comic_333333" />

            <FrameLayout
                android:id="@+id/fl_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comic_login_tab">

                <LinearLayout
                    android:id="@+id/lin_phoneLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/comic_login_username"
                        android:layout_width="@dimen/dp_221"
                        android:layout_height="@dimen/dp_60"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_comic_login_zhanghao" />

                        <EditText
                            android:id="@+id/comic_login_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="@string/comic_input_phone_number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:lines="1"
                            android:textColor="@color/comic_333333"
                            android:textColorHint="@color/comic_999999"
                            android:textSize="@dimen/dp_13" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider_username"
                        android:layout_width="@dimen/dp_221"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/comic_e3e3e3" />

                    <LinearLayout
                        android:id="@+id/comic_login_password"
                        android:layout_width="@dimen/dp_221"
                        android:layout_height="@dimen/dp_60"
                        android:layout_below="@id/divider_username"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/comic_login_password_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_comic_login_mima" />

                            <EditText
                                android:id="@+id/comic_login_pwd"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_25"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/comic_input_code"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:lines="1"
                                android:textColor="@color/comic_333333"
                                android:textColorHint="@color/comic_999999"
                                android:textSize="@dimen/dp_13" />

                            <TextView
                                android:id="@+id/comic_login_code"
                                android:layout_width="@dimen/dp_86"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/comic_login_code"
                                android:enabled="false"
                                android:gravity="center"
                                android:text="@string/comic_get_code"
                                android:textAppearance="@style/comic_code" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/divider_password"
                        android:layout_width="@dimen/dp_221"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/comic_e3e3e3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_uidLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_221"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_comic_login_zhanghao" />

                        <EditText
                            android:id="@+id/et_uidLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="@string/comic_input_uid"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:lines="1"
                            android:textColor="@color/comic_333333"
                            android:textColorHint="@color/comic_999999"
                            android:textSize="@dimen/dp_13" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_221"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/comic_e3e3e3" />
                </LinearLayout>
            </FrameLayout>

            <Button
                android:id="@+id/comic_login_btn"
                android:layout_width="@dimen/dp_221"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/btn_buttonbg_yellow"
                android:focusedByDefault="true"
                android:gravity="center"
                android:text="@string/comic_login_now"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_18" />


            <LinearLayout
                android:id="@+id/comic_login_container"
                android:layout_width="@dimen/dp_221"
                android:layout_height="wrap_content"
                android:layout_below="@id/comic_login_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/comic_login_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comic_login_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/comic_login_by_wx"
                        android:textColor="@color/comic_999999"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comic_login_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comic_login_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/comic_login_by_qq"
                        android:textColor="@color/comic_999999"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comic_login_wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comic_login_weibo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/comic_login_by_wb"
                        android:textColor="@color/comic_999999"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_15">

            <CheckBox
                android:id="@+id/comic_login_agree"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:button="@drawable/comic_login_agreement"
                android:checked="true" />

            <TextView
                android:id="@+id/comic_login_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/comic_agree_app_ment"
                android:textColor="@color/comic_333333"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>